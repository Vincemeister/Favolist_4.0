<div class="nav-header-desktop nav-header-desktop-settings sticky-header text-decoration-none">
  <div>
    <h5 class="main-title">
      Settings
    </h5>
  </div>
  <div></div>
</div>

<div class="nav-header sticky-header text-decoration-none">
  <div class="back-arrow-and-element">
    <%= link_to settings_path do %>
      <i class="fa-regular fa-arrow-left"></i>
    <% end %>
  </div>
  <div>
    <h5 class="main-title">
      Contact
    </h5>
  </div>
  <div></div>
</div>


<div class="settings-desktop-grid">
  <%= render 'shared/settings_menu' %>
  <div class="settings-container subpage-settings-container">
    <h3 class="hide-on-mobile">Contact</h3>
    <div class="form-container">
      <%= simple_form_for @contact, html: { multipart: true, class: 'settings-form' } do |f| %>
    <p>We'd love to hear from you. Feel free to contact us about business inquiries, feedback or anything else you'd like to share. We'll get back to you as soon possible.</p>


    <% if @contact.errors.any? %>
        <div id="error_explanation" class="bg-rose-200 pt-3 pb-1 mb-4 px-4 rounded-md">
            <div class="font-bold text-rose-700 text-sm pb-4">
                <%= pluralize(@contact.errors.count, "error") %> prohibited this page from being saved:
            </div>

            <ul class="pb-0 mb-0">
                <% @contact.errors.full_messages.each do |message| %>
                    <li class="text-rose-600 pl-4 text-sm"><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>


      <div class="form-group form-group-container">
        <%= f.input :name, class: 'form-control bio', maxlength: 100 %>
      </div>




      <div class="form-group form-group-container">
        <%= f.input :email, class: 'form-control', maxlength: 200 %>
      </div>



      <div class="form-group form-group-container">
        <%= f.label :message, class: "label mb-2" %>
        <%= f.text_area :message, class: 'form-control about', placeholder: "Your message (maximum 5000 characters)", maxlength: 5000, data: { action: "keyup->charactercounter#updateCounter" } %>
      </div>

        <%= f.button :submit, 'Send message', class: 'button button-primary' %>
      <% end %>
    </div>
  </div>
</div>

<div class="settings-desktop-grid">
  <div class="settings-menu">
    <%= render 'shared/settings_menu' %>
  </div>
  <div class="settings-container">
    <h2>Privacy</h2>
    <%= simple_form_for @user, url: update_privacy_settings_path, method: :patch do |f| %>
      <%= f.input :privacy, as: :radio_buttons, collection: ['public', 'followers'] %>
      <%= f.button :submit, "Update Privacy Settings", class: "button button-primary" %>
    <% end %>
  </div>
</div>

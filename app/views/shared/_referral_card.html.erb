<div class="referral-card text-decoration-none">
  <div class="avatar-and-username-and-list-name-and-code-frame-and-image">



    <div class="avatar-and-username-and-list-name-and-code-frame">
      <div class="avatar-and-username">
        <%= link_to user_path(referral.product.user) do %>
          <%= image_tag referral.product.user.avatar, class: 'avatar-small' %>
        <% end %>
        <%= link_to user_path(referral.product.user) do %>
          <div class="username paragraph-small-medium">
            <%= referral.product.user.username %>
          </div>
          <div class="paragraph-small-regular">
            <%= referral.product.list.name %>
          </div>
        <% end %>
      </div>
      <div class="code-frame">
        <div class="content-text">
          <%= referral.code %>
        </div>
      </div>
    </div>

    <%= cl_image_tag(referral.product.photos.first.key, :height => 112, :crop => :scale) %>


  </div>


  <div class="referral-details content-text">
    <%= referral.details %>
  </div>
  <!--RENDERING THE CARDBAR -->
  <%= render "shared/product_card/cardbar_search", product: referral.product, iterating_for: "referral_card" %>
</div>

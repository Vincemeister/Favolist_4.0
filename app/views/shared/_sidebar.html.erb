<% if controller_name == "pages" && action_name == "home" %>
  <div class="sidebar">
    <div class="suggested-for-you">
      Suggested for you
    </div>
    <div class="suggested-profiles-container">
      <div class="profiles-x-follows">
        Profiles
      </div>
      <% @suggested_users.each do |user| %>
        <%= render 'shared/user_card', user: user, sidebar: true %>
      <% end %>
    </div>
    <div class="suggested-lists-container">
    <div class="profiles-x-follows">
      Lists
    </div>
    <% @suggested_lists.each do |list| %>
      <%= render 'shared/list_card', list: list, sidebar: true %>
    <% end %>
  </div>
  </div>
<% end %>

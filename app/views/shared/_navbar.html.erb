
<div class="navbar text-decoration-none">
  <%= link_to search_path do %>
    <i class="fa-sharp fa-regular fa-magnifying-glass"></i>
  <% end %>
  <% if user_signed_in? %>
    <%= link_to user_path(current_user) do %>
      <i class="fa-sharp fa-solid fa-user"></i>
    <% end %>
  <% else %>
    <%= link_to 'Sign in', new_user_session_path %>
  <% end %>
  <%= link_to root_path do %>
    <i class="fa-sharp fa-solid fa-house"></i>
  <% end %>
  <% if user_signed_in? %>
    <%= link_to settings_path do %>
      <i class="fa-sharp fa-solid fa-gear"></i>
    <% end %>
  <% end %>
  <% if user_signed_in? %>
    <i class="fa-sharp fa-solid fa-square-plus" data-bs-toggle="modal" data-bs-target="#exampleModal"></i>
  <% end %>
  </div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">What do you want to create?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body custom-modal-body ">
        <%# // to achieve a gap between the buttons on the modal I set a mb-1 %>
        <%= link_to new_product_path, class: "button button-primary w-100 mb-3" do %>
          <i class="fa-sharp fa-light fa-square"></i>Product
        <% end %>
        <%= button_to new_list_path, class: "button button-primary w-100" do %>
          <i class="fa-sharp fa-light fa-table-cells"></i>List
        <% end %>
      </div>
    </div>
  </div>
</div>


<!-- Same as the product_card_feed partial -->

<div class="product-card-feed">
  <div class="product-card-header">
    <h6><%= @product.list.name %></h6>
    <h5><%= @product.title  %></h5>
    <h6><%= @product.price %></h6>
  </div>
  <div class="product-card-image">
    <% if @product.photos.attached? %>
     <div class="main-product-image">
      <%= image_tag @product.photos.first %>
     </div>
    <% else %>
      <p>No image available</p>
    <% end %>
  </div>
  <div class="product-card-cardbar">
    <div class="product-card-cardbar-left">
      <%= image_tag @product.user.avatar, class: 'avatar-small' %>
      <%= @product.user.username %>
    </div>
    <div class="product-card-cardbar-logo">
      <% if @product.logo.attached? %>
        <div class="product-card-cardbar">
          <%= image_tag @product.logo %>
        </div>
      <% else %>
        <p>No image available</p>
      <% end %>
    </div>
    <div class="product-card-cardbar-right">
      <div class="product-card-cardbar-iconbox">
        <i class="fa-sharp fa-light fa-bookmark"></i>
        <p>30</p>
      </div>
      <div class="product-card-cardbar-iconbox">
        <i class="fa-light fa-circle-plus"></i>
        <p>8</p>
      </div>
      <div class="product-card-cardbar-iconbox">
        <i class="fa-light fa-comment"></i>
        <p>72</p>
      </div>
    </div>
  </div>


  <div class="tab-bar d-flex justify-content-center px-3 py-1 bg-white" style="font-weight: 100;">
    <ul class="nav nav-pills nav-justified." id="pills-tab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active product-tabs" id="pills-review-tab" data-bs-toggle="pill" data-bs-target="#pills-review" type="button" role="tab" aria-controls="pills-review" aria-selected="true">Review</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link product-tabs" id="pills-description-tab" data-bs-toggle="pill" data-bs-target="#pills-description" type="button" role="tab" aria-controls="pills-description" aria-selected="false">Description</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link product-tabs" id="pills-referrals-tab" data-bs-toggle="pill" data-bs-target="#pills-referrals" type="button" role="tab" aria-controls="pills-referrals" aria-selected="false">Referrals</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link product-tabs" id="pills-comments-tab" data-bs-toggle="pill" data-bs-target="#pills-comments" type="button" role="tab" aria-controls="pills-comments" aria-selected="false">Comments</button>
      </li>
    </ul>
  </div>


  <div class="tab-content product-content container" id="pills-tabContent">
    <div class="tab-pane fade show active linebreak" id="pills-review" role="tabpanel" aria-labelledby="pills-review-tab">
      <%= @product.review %>
    </div>
    <div class="tab-pane fade linebreak" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
      <%= @product.description %>
    </div>
    <div class="tab-pane fade linebreak" id="pills-referrals" role="tabpanel" aria-labelledby="pills-referrals-tab">
      <div class="d-flex justify-content-between align-items-center px-3">
        <p><%= @product.referrals %></p>
      </div>
    </div>
    <div class="tab-pane fade linebreak" id="pills-comments" role="tabpanel" aria-labelledby="pills-comments-tab">
      <%= @product.description %>
    </div>

  </div>



</div>


<div class="comments-container">


 <h3 class="m-0 p-0">Comments</h3>


  <div data-controller="comments">
    <div class="container">
      <%= render 'comments/commentform', product: @product, comment: Comment.new, parent_comment_id: nil, remote: true %>
    </div>
    <div class="container">
      <% @product.comments.where(parent_comment_id: nil).each do |comment| %>
        <%= render "comments/comment", comment: comment, product: @product %>
      <% end %>
    </div>
  </div>

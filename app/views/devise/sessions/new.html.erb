
<div id="fullscreen-bg">
  <div class="slidingimagerows" data-controller="slidingimagerows">
    <div data-slidingimagerows-target="row" class="row-container"></div>
    <div data-slidingimagerows-target="row" class="row-container"></div>
    <div data-slidingimagerows-target="row" class="row-container"></div>
    <div data-slidingimagerows-target="row" class="row-container"></div>
  </div>
</div>



<div id="centered-form" class="new-session-container" data-controller="slidingimagerows">
  <div class="logo-and-intro">
    <%= image_tag "https://res.cloudinary.com/dncij7vr6/image/upload/v1686124155/Favolist%204.0/app%20assets/favolist_logo_dftbgl.svg", alt: "Favolist Logo" %>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "log-in-button button button-primary" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
